<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT"
      method="post"
      enctype="multipart/form-data"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          value="<%= campground.title %>"
          required
        />
        <div class="valid-feedback">좋습니다!</div>
        <div class="invalid-feedback">캠핑장 이름을 입력해주세요.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          value="<%= campground.location %>"
          required
        />
        <div class="valid-feedback">좋습니다!</div>
        <div class="invalid-feedback">지역을 입력해주세요.</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image File</label>
        <input class="form-control" type="file" name="image" id="image" multiple required>
        <div class="valid-feedback">좋습니다!</div>
        <div class="invalid-feedback">이미지 URL을 입력해주세요.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            id="price"
            step="0.01"
            name="campground[price]"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            value="<%= campground.price %>"
            required
          />
          <div class="valid-feedback">좋습니다!</div>
        <div class="invalid-feedback">금액을 입력해주세요.</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="description"
          required
        >
<%= campground.description %></textarea
        >
        <div class="valid-feedback">좋습니다!</div>
        <div class="invalid-feedback">설명을 입력해주세요.</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Campground</button>
      </div>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Back To Campgrounds</a>
  </div>
</div>
