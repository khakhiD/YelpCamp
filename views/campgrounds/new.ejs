<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title" required
        />
        <div class="valid-feedback">좋습니다!</div>
        <div class="invalid-feedback">캠핑장 이름을 입력해주세요.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location" required
        />
        <div class="valid-feedback">좋습니다!</div>
        <div class="invalid-feedback">지역을 입력해주세요.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            id="price"
            step="0.01"
            name="campground[price]"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label" required
          />
          <div class="valid-feedback">좋습니다!</div>
          <div class="invalid-feedback">금액을 입력해주세요.</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="description" required
        ></textarea>
        <div class="valid-feedback">좋습니다!</div>
        <div class="invalid-feedback">간단한 설명을 입력해주세요.</div>
      </div>
      <div class="mb-3">
        <div class="form-file custom-file">
          <label for="image" class="form-label">Upload Images</label>
          <input class="form-control" type="file" name="image" id="image" multiple required>
          <label for="image" class="form-file-label">
            <!-- <span class="form-file-text custom-file-label">Choose image(s)...</span> -->
            <!-- <span class="form-file-button">Browse</span> -->
          </label>
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>
  </div>
</div>